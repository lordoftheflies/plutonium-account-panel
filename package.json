{
  "name": "plutonium-account-panel",
  "version": "0.0.0-development",
  "private": false,
  "description": "Account information panel.",
  "main": "plutonium-account-panel.js",
  "module": "plutonium-account-panel.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf plutonium-account-panel.{d.ts,d.ts.map,js,js.map} test/plutonium-account-panel.{d.ts,d.ts.map,js,js.map} test/plutonium-account-panel_test.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/* --write",
    "docs": "npm run docs:clean && npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:clean": "rimraf docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file docs/plutonium-account-panel.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "es-dev-server --root-dir=docs --node-resolve --watch",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json",
    "serve": "es-dev-server --node-resolve --watch",
    "test": "karma start karma.conf.cjs",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
    "checksize": "rollup -c ; cat plutonium-account-panel.bundled.js | gzip -9 | wc -c ; rm plutonium-account-panel.bundled.js",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "cherubits",
    "plutonium",
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "László Hegedűs <laszlo.hegedus@cherubits.hu>",
  "license": "Apache-2.0",
  "dependencies": {
    "lit-element": "^2.3.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@open-wc/testing": "^2.5.10",
    "@open-wc/testing-karma": "^3.3.11",
    "@rollup/plugin-replace": "^2.3.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.5",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "chai": "^4.2.0",
    "conventional-changelog": "^3.1.18",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.46.1",
    "eslint": "^6.8.0",
    "git-conventional-commits": "^1.0.5",
    "husky": "^4.2.5",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "lit-analyzer": "^1.1.10",
    "mocha": "^7.1.1",
    "npm-version": "^1.1.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-filesize": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "semantic-release": "^17.0.7",
    "semantic-release-cli": "^5.2.3",
    "typescript": "^3.8.3",
    "web-component-analyzer": "^1.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lordoftheflies/plutonium-account-panel.git"
  },
  "bugs": {
    "url": "https://github.com/lordoftheflies/plutonium-account-panel/issues"
  },
  "homepage": "https://lordoftheflies.github.io/plutonium-account-panel/",
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
